extends ./layout

block append head
	link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/select2/4.0.1/css/select2.min.css')
	link(rel='stylesheet', href='/css/aiwf.css')
	
block main
	h1 All I Want For
	label(for="name") Name:
		input#name(name="name")
	label(for="members") Members:
		select#members(name="members", multiple="multiple")
					
block append script
	script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.2.0/jquery.min.js')
	script(src='//cdnjs.cloudflare.com/ajax/libs/select2/4.0.1/js/select2.min.js')
	script.
		function modesel() {
			$('#members').select2({
				tags: true,
				minimumResultsForSearch: 1,
				tokenSeparators: [',', ' ']
			});
		};
		window.onload = modesel;